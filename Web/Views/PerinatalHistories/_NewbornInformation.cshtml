@model Domain.NewbornInformation

@* ============ SECCION RECIEN NACIDO ============ *@
<div class="row">
    @* Primera columna: SEXO, PESO AL NACER, P. CEFALICO, LONGITUD *@
    <div class="col-md-2">
        @* SEXO - horizontal *@
        <div class="form-group mb-2">
            <label class="small font-weight-bold">SEXO</label>
            <div class="d-flex flex-wrap" style="font-size: 11px;">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Sex" value="F" id="sexF"
                           @(Model?.Sex == "F" ? "checked" : "") />
                    <label class="form-check-label" for="sexF">f</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Sex" value="M" id="sexM"
                           @(Model?.Sex == "M" ? "checked" : "") />
                    <label class="form-check-label" for="sexM">m</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Sex" value="Undefined" id="sexUndefined"
                           @(Model?.Sex == "Undefined" ? "checked" : "") />
                    <label class="form-check-label" for="sexUndefined">no definido</label>
                </div>
            </div>
        </div>

        @* PESO AL NACER - radios editables *@
        <div class="form-group mb-2">
            <label class="small font-weight-bold">PESO AL NACER</label>
            <div class="d-flex align-items-center">
                <input type="number" class="form-control form-control-sm" id="BirthWeight" name="BirthWeight"
                       style="width: 70px;" step="1" min="0" max="9999"
                       value="@(Model?.BirthWeight?.ToString())" />
                <span class="ml-1 small">g</span>
            </div>
            <div class="mt-1" style="font-size: 10px;">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="BirthWeightCategory" value="low" id="weightLow" />
                    <label class="form-check-label" for="weightLow">&lt; 2500 g</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="BirthWeightCategory" value="high" id="weightHigh" />
                    <label class="form-check-label" for="weightHigh">&gt;= 4000 g</label>
                </div>
            </div>
        </div>

        @* P. CEFALICO *@
        <div class="form-group mb-2">
            <label class="small font-weight-bold">P. CEFALICO</label>
            <div class="d-flex align-items-center">
                <input type="number" class="form-control form-control-sm" id="HeadCircumference" name="HeadCircumference"
                       style="width: 60px;" step="0.1" min="0" max="99"
                       value="@(Model?.HeadCircumference?.ToString())" />
                <span class="ml-1 small">cm</span>
            </div>
        </div>

        @* LONGITUD *@
        <div class="form-group mb-2">
            <label class="small font-weight-bold">LONGITUD</label>
            <div class="d-flex align-items-center">
                <input type="number" class="form-control form-control-sm" id="Length" name="Length"
                       style="width: 60px;" step="0.1" min="0" max="99"
                       value="@(Model?.Length?.ToString())" />
                <span class="ml-1 small">cm</span>
            </div>
        </div>
    </div>

    @* Segunda columna: EDAD GESTACIONAL, PESO E.G., APGAR *@
    <div class="col-md-2">
        @* EDAD GESTACIONAL - radios horizontales *@
        <div class="form-group mb-2">
            <label class="small font-weight-bold">EDAD GESTACIONAL</label>
            <div class="d-flex align-items-center mb-1">
                <input type="number" class="form-control form-control-sm" id="GestationalAgeWeeks" name="GestationalAgeWeeks"
                       style="width: 45px;" min="20" max="44"
                       value="@(Model?.GestationalAgeWeeks?.ToString())" />
                <span class="mx-1 small">sem.</span>
                <input type="number" class="form-control form-control-sm" id="GestationalAgeDays" name="GestationalAgeDays"
                       style="width: 40px;" min="0" max="6"
                       value="@(Model?.GestationalAgeDays?.ToString())" />
                <span class="ml-1 small">días</span>
            </div>
            <div class="d-flex flex-wrap">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="GestationalAgeMethod" value="FUM" id="gaMethodFUM"
                           @(Model?.GestationalAgeMethod == "FUM" ? "checked" : "") />
                    <label class="form-check-label" for="gaMethodFUM">FUM</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="GestationalAgeMethod" value="ECO" id="gaMethodECO"
                           @(Model?.GestationalAgeMethod == "ECO" ? "checked" : "") />
                    <label class="form-check-label" for="gaMethodECO">ECO</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="GestationalAgeMethod" value="ESTIMADA" id="gaMethodEstimada"
                           @(Model?.GestationalAgeMethod == "ESTIMADA" ? "checked" : "") />
                    <label class="form-check-label" for="gaMethodEstimada">ESTIMADA</label>
                </div>
            </div>
        </div>

        @* PESO E.G. *@
        <div class="form-group mb-2">
            <label class="small font-weight-bold">PESO E.G.</label>
            <div style="font-size: 10px;">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="WeightForGestationalAge" value="Adequate" id="pesoEGAdec"
                           @(Model?.WeightForGestationalAge == "Adequate" ? "checked" : "") />
                    <label class="form-check-label" for="pesoEGAdec">adec.</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="WeightForGestationalAge" value="Small" id="pesoEGPeq"
                           @(Model?.WeightForGestationalAge == "Small" ? "checked" : "") />
                    <label class="form-check-label" for="pesoEGPeq">peq.</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="WeightForGestationalAge" value="Large" id="pesoEGGde"
                           @(Model?.WeightForGestationalAge == "Large" ? "checked" : "") />
                    <label class="form-check-label" for="pesoEGGde">gde.</label>
                </div>
            </div>
        </div>

        @* APGAR *@
        <div class="form-group mb-2">
            <label class="small font-weight-bold">APGAR (min)</label>
            <div class="d-flex align-items-center">
                <input type="number" class="form-control form-control-sm" id="ApgarFirstMinute" name="ApgarFirstMinute"
                       style="width: 40px;" min="0" max="10"
                       value="@(Model?.ApgarFirstMinute?.ToString())" />
                <span class="mx-1 small">1<sup>er</sup></span>
                <input type="number" class="form-control form-control-sm" id="ApgarFifthMinute" name="ApgarFifthMinute"
                       style="width: 40px;" min="0" max="10"
                       value="@(Model?.ApgarFifthMinute?.ToString())" />
                <span class="ml-1 small">5<sup>to</sup></span>
            </div>
        </div>
    </div>

    @* Tercera columna: LACTANCIA y REANIMACION *@
