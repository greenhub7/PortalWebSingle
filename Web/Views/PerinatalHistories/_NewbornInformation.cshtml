    @* TAMIZAJE NEONATAL - etiquetas arriba, radios abajo, alineado izquierda *@
    <div class="col-md-6">
        <div class="form-group">
            <label class="small font-weight-bold">TAMIZAJE NEONATAL</label>
            <div>
                @* Primera fila: VIH en RN *@
                <div class="d-flex flex-wrap mb-1">
                    <span class="font-weight-bold mr-2 align-self-center"></span>
                    <div class="mr-3">
                        <div class="mb-0">VIH en RN Expuesto</div>
                        <div class="d-flex">
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="HIVExposedStatus" value="no" id="hivExpNo"
                                       @(Model?.HIVExposedStatus == "no" ? "checked" : "") />
                                <label class="form-check-label" for="hivExpNo">no</label>
                            </div>
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="HIVExposedStatus" value="si" id="hivExpSi"
                                       @(Model?.HIVExposedStatus == "si" ? "checked" : "") />
                                <label class="form-check-label" for="hivExpSi">si</label>
                            </div>
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="HIVExposedStatus" value="s/d" id="hivExpSd"
                                       @(Model?.HIVExposedStatus == "s/d" ? "checked" : "") />
                                <label class="form-check-label" for="hivExpSd">s/d</label>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="mb-0">VIH en RN Tto.</div>
                        <div class="d-flex">
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="HIVTreatmentStatus" value="no" id="hivTtoNo"
                                       @(Model?.HIVTreatmentStatus == "no" ? "checked" : "") />
                                <label class="form-check-label" for="hivTtoNo">no</label>
                            </div>
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="HIVTreatmentStatus" value="si" id="hivTtoSi"
                                       @(Model?.HIVTreatmentStatus == "si" ? "checked" : "") />
                                <label class="form-check-label" for="hivTtoSi">si</label>
                            </div>
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="HIVTreatmentStatus" value="s/d" id="hivTtoSd"
                                       @(Model?.HIVTreatmentStatus == "s/d" ? "checked" : "") />
                                <label class="form-check-label" for="hivTtoSd">s/d</label>
                            </div>
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="HIVTreatmentStatus" value="n/c" id="hivTtoNc"
                                       @(Model?.HIVTreatmentStatus == "n/c" ? "checked" : "") />
                                <label class="form-check-label" for="hivTtoNc">n/c</label>
                            </div>
                        </div>
                    </div>
                </div>
                @* Segunda fila: VDRL + Tto *@
                <div class="d-flex flex-wrap mb-1">
                    <div class="mr-3">
                        <div class="mb-0 font-weight-bold">VDRL</div>
                        <div class="d-flex">
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="VDRLResult" value="-" id="vdrlNeg"
                                       @(Model?.VDRLResult == "-" ? "checked" : "") />
                                <label class="form-check-label" for="vdrlNeg">-</label>
                            </div>
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="VDRLResult" value="+" id="vdrlPos"
                                       @(Model?.VDRLResult == "+" ? "checked" : "") />
                                <label class="form-check-label" for="vdrlPos">+</label>
                            </div>
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="VDRLResult" value="no_se_hizo" id="vdrlNoHizo"
                                       @(Model?.VDRLResult == "no_se_hizo" ? "checked" : "") />
                                <label class="form-check-label" for="vdrlNoHizo">no se hizo</label>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="mb-0 font-weight-bold">VDRL Tto</div>
                        <div class="d-flex">
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="VDRLTreatment" value="no" id="vdrlTtoNo"
                                       @(Model?.VDRLTreatment == "no" ? "checked" : "") />
                                <label class="form-check-label" for="vdrlTtoNo">no</label>
                            </div>
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="VDRLTreatment" value="si" id="vdrlTtoSi"
                                       @(Model?.VDRLTreatment == "si" ? "checked" : "") />
                                <label class="form-check-label" for="vdrlTtoSi">si</label>
                            </div>
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="VDRLTreatment" value="n/c" id="vdrlTtoNc"
                                       @(Model?.VDRLTreatment == "n/c" ? "checked" : "") />
                                <label class="form-check-label" for="vdrlTtoNc">n/c</label>
                            </div>
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="VDRLTreatment" value="s/d" id="vdrlTtoSd"
                                       @(Model?.VDRLTreatment == "s/d" ? "checked" : "") />
                                <label class="form-check-label" for="vdrlTtoSd">s/d</label>
                            </div>
                        </div>
                    </div>
                </div>
                @* Tercera fila: Audic, Chagas, Bilirrub, Toxo IgM, Hb patía, Cardiov - etiquetas arriba *@
                <div class="d-flex flex-wrap mb-1">
                    @foreach (var item in new[] {
                        new { Name = "ScreeningAudic", Label = "Audic", Value = Model?.ScreeningAudic },
                        new { Name = "ScreeningChagas", Label = "Chagas", Value = Model?.ScreeningChagas },
                        new { Name = "ScreeningBilirrub", Label = "Bilirrub.", Value = Model?.ScreeningBilirrub },
                        new { Name = "ScreeningToxoIgM", Label = "Toxo IgM", Value = Model?.ScreeningToxoIgM },
                        new { Name = "ScreeningHbPatia", Label = "Hb patía", Value = Model?.ScreeningHbPatia },
                        new { Name = "ScreeningCardiov", Label = "Cardiov", Value = Model?.ScreeningCardiov }
                    })
                    {
                        <div class="mr-2 mb-1">
                            <div class="mb-0">@item.Label</div>
                            <div class="d-flex">
                                <div class="form-check form-check-inline mb-0">
                                    <input class="form-check-input" type="radio" name="@item.Name" value="-" id="@(item.Name)Neg"
                                           @(item.Value == "-" ? "checked" : "") />
                                    <label class="form-check-label" for="@(item.Name)Neg">-</label>
                                </div>
                                <div class="form-check form-check-inline mb-0">
                                    <input class="form-check-input" type="radio" name="@item.Name" value="+" id="@(item.Name)Pos"
                                           @(item.Value == "+" ? "checked" : "") />
                                    <label class="form-check-label" for="@(item.Name)Pos">+</label>
                                </div>
                                <div class="form-check form-check-inline mb-0">
                                    <input class="form-check-input" type="radio" name="@item.Name" value="no_se_hizo" id="@(item.Name)NoHizo"
                                           @(item.Value == "no_se_hizo" ? "checked" : "") />
                                    <label class="form-check-label" for="@(item.Name)NoHizo">no se hizo</label>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @* Cuarta fila: Metabólicas *@
                <div class="d-flex flex-wrap">
                    <div>
                        <div class="mb-0 font-weight-bold">Metabólicas</div>
                        <div class="d-flex">
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="ScreeningMetabolicStatus" value="no_realizado" id="metabNoReal"
                                       @(Model?.ScreeningMetabolicStatus == "no_realizado" ? "checked" : "") />
                                <label class="form-check-label" for="metabNoReal">no realizado</label>
                            </div>
                            <div class="form-check form-check-inline mb-0">
                                <input class="form-check-input" type="radio" name="ScreeningMetabolicStatus" value="realizado" id="metabReal"
                                       @(Model?.ScreeningMetabolicStatus == "realizado" ? "checked" : "") />
                                <label class="form-check-label" for="metabReal">realizado</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

