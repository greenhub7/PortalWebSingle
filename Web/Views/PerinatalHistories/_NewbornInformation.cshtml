                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="ResuscitationStimulationStatus" value="true" id="stimSi"
                                   @(Model?.ResuscitationStimulation == true ? "checked" : "") />
                            <label class="form-check-label" for="stimSi">si</label>
                        </div>
                    </div>
                </div>
                <div class="mr-3 mb-1">
                    <div class="mb-0">aspiración</div>
                    <div class="d-flex">
                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="ResuscitationAspirationStatus" value="false" id="aspirNo"
