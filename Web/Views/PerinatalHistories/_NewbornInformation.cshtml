@* ============ EGRESO RN ============ *@
<div class="row mt-2">
    <div class="col-md-12">
        <label class="small font-weight-bold">EGRESO RN</label>
    </div>
</div>
<div class="row" >
    @* vivo/fallece + fecha + hora *@
    <div class="col-md-3">
        <div class="d-flex align-items-center mb-1">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="DischargeStatus" value="vivo" id="dischargeVivo"
                       @(Model?.DischargeStatus == "vivo" ? "checked" : "") />
                <label class="form-check-label" for="dischargeVivo">vivo</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="DischargeStatus" value="fallece" id="dischargeFallece"
                       @(Model?.DischargeStatus == "fallece" ? "checked" : "") />
                <label class="form-check-label" for="dischargeFallece">fallece</label>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <input type="date" class="form-control form-control-sm" id="DischargeDate" name="DischargeDate"
                   style="width: 130px;"
                   value="@(Model?.DischargeDate.HasValue == true && Model.DischargeDate.Value != default(DateTime) ? Model.DischargeDate.Value.ToString("yyyy-MM-dd") : "")" />
            <input type="time" class="form-control form-control-sm ml-1" id="DischargeTime" name="DischargeTime"
                   style="width: 90px;" value="@Model?.DischargeTime" />
        </div>
    </div>

    @* traslado + lugar + fallece durante *@
    <div class="col-md-3">
        <div class="d-flex align-items-center mb-1">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="Transferred" name="Transferred"
                       @(Model?.Transferred == true ? "checked" : "") />
                <label class="form-check-label" for="Transferred">traslado</label>
            </div>
        </div>
        <div class="d-flex align-items-center mb-1">
            <span class="mr-1">lugar</span>
            <input type="text" class="form-control form-control-sm" id="TransferLocation" name="TransferLocation"
                   style="width: 250px;" value="@Model?.TransferLocation" />
        </div>
        <div>
            <span>fallece durante o en lugar de traslado</span>
            <div class="d-inline-flex ml-1">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="DiedDuringTransferStatus" value="no" id="diedTransfNo"
                           @(Model?.DiedDuringTransferStatus == "no" ? "checked" : "") />
                    <label class="form-check-label" for="diedTransfNo">no</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="DiedDuringTransferStatus" value="si" id="diedTransfSi"
                           @(Model?.DiedDuringTransferStatus == "si" ? "checked" : "") />
                    <label class="form-check-label" for="diedTransfSi">si</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="DiedDuringTransferStatus" value="s/d" id="diedTransfSd"
                           @(Model?.DiedDuringTransferStatus == "s/d" ? "checked" : "") />
                    <label class="form-check-label" for="diedTransfSd">s/d</label>
                </div>
            </div>
        </div>
    </div>

    @* EDAD AL EGRESO + ALIMENTO AL ALTA *@
    <div class="col-md-2">
        <div class="mb-1">
            <span class="font-weight-bold">EDAD AL EGRESO</span>
            <span class="small">días completos</span>
        </div>
        <div class="d-flex align-items-center">
            <input type="number" class="form-control form-control-sm" id="DischargeAge" name="DischargeAge"
                   style="width: 50px;" min="0"
                   value="@(Model?.DischargeAge > 0 ? Model.DischargeAge.ToString() : "")" />
            <div class="form-check ml-2">
                <input class="form-check-input" type="checkbox" id="DischargeAgeLessThanOneDay" name="DischargeAgeLessThanOneDay"
                       @(Model?.DischargeAgeLessThanOneDay == true ? "checked" : "") />
                <label class="form-check-label" for="DischargeAgeLessThanOneDay">&lt; 1 día</label>
            </div>
        </div>
        <div class="mt-2">
            <span class="font-weight-bold">ALIMENTO AL ALTA</span>
            <div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="FeedingAtDischarge" value="lact_excl" id="feedingExcl"
                           @(Model?.FeedingAtDischarge == "lact_excl" ? "checked" : "") />
                    <label class="form-check-label" for="feedingExcl">lact. excl.</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="FeedingAtDischarge" value="parcial" id="feedingParcial"
                           @(Model?.FeedingAtDischarge == "parcial" ? "checked" : "") />
                    <label class="form-check-label" for="feedingParcial">parcial</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="FeedingAtDischarge" value="artificial" id="feedingArtif"
                           @(Model?.FeedingAtDischarge == "artificial" ? "checked" : "") />
                    <label class="form-check-label" for="feedingArtif">artificial</label>
                </div>
            </div>
        </div>
    </div>

    @* Boca arriba, BCG, INMUN. HEPATITIS B, Meconio 1er día *@
