                            <label class="form-check-label" for="massageNo">no</label>
                        </div>
                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="ResuscitationMassageStatus" value="true" id="massageSi"
                                   @(Model?.ResuscitationMassage == true ? "checked" : "") />
                            <label class="form-check-label" for="massageSi">si</label>
                        </div>
                    </div>
                </div>
                <div class="mr-3 mb-1">
                    <div class="mb-0">intubación</div>
                    <div class="d-flex">
                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="ResuscitationIntubationStatus" value="false" id="intubNo"
                                   @(Model?.ResuscitationIntubation == false ? "checked" : "") />
                            <label class="form-check-label" for="intubNo">no</label>
                        </div>
                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="ResuscitationIntubationStatus" value="true" id="intubSi"
                                   @(Model?.ResuscitationIntubation == true ? "checked" : "") />
                            <label class="form-check-label" for="intubSi">si</label>
                        </div>
                    </div>
                </div>
                <div class="mr-3 mb-1">
                    <div class="mb-0">medicación</div>
                    <div class="d-flex">
                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="ResuscitationMedicationStatus" value="false" id="medicNo"
                                   @(Model?.ResuscitationMedication == false ? "checked" : "") />
                            <label class="form-check-label" for="medicNo">no</label>
                        </div>
                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="ResuscitationMedicationStatus" value="true" id="medicSi"
                                   @(Model?.ResuscitationMedication == true ? "checked" : "") />
                            <label class="form-check-label" for="medicSi">si</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Cuarta columna: ATENDIO PARTO y NEONATO *@
    <div class="col-md-5">
        <div class="form-group mb-2">
            <label class="small font-weight-bold">ATENDIO</label>
            <div style="font-size: 10px;">
                @* PARTO *@
                <div class="d-flex align-items-center mb-2">
                    <span class="font-weight-bold mr-2" style="min-width: 60px;">PARTO</span>
                    <div class="d-inline-flex flex-wrap align-items-center">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="DeliveryAttendantType" value="medico" id="partoMedico"
                                   @(Model?.DeliveryAttendantType == "medico" ? "checked" : "") />
                            <label class="form-check-label" for="partoMedico">médico</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="DeliveryAttendantType" value="obst" id="partoObst"
                                   @(Model?.DeliveryAttendantType == "obst" ? "checked" : "") />
                            <label class="form-check-label" for="partoObst">obst.</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="DeliveryAttendantType" value="enf" id="partoEnf"
                                   @(Model?.DeliveryAttendantType == "enf" ? "checked" : "") />
                            <label class="form-check-label" for="partoEnf">enf.</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="DeliveryAttendantType" value="auxil" id="partoAuxil"
                                   @(Model?.DeliveryAttendantType == "auxil" ? "checked" : "") />
                            <label class="form-check-label" for="partoAuxil">auxil.</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="DeliveryAttendantType" value="estud" id="partoEstud"
                                   @(Model?.DeliveryAttendantType == "estud" ? "checked" : "") />
                            <label class="form-check-label" for="partoEstud">estud.</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="DeliveryAttendantType" value="empir" id="partoEmpir"
                                   @(Model?.DeliveryAttendantType == "empir" ? "checked" : "") />
                            <label class="form-check-label" for="partoEmpir">empir.</label>
