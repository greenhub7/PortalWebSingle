                    <div class="d-flex">
                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="ResuscitationOxygenStatus" value="false" id="oxygenNo"
                                   @(Model?.ResuscitationOxygen == false ? "checked" : "") />
                            <label class="form-check-label" for="oxygenNo">no</label>
                        </div>
                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="ResuscitationOxygenStatus" value="true" id="oxygenSi"
                                   @(Model?.ResuscitationOxygen == true ? "checked" : "") />
                            <label class="form-check-label" for="oxygenSi">si</label>
                        </div>
                    </div>
                </div>
                <div class="mr-3 mb-1">
                    <div class="mb-0">masaje</div>
                    <div class="d-flex">
                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="ResuscitationMassageStatus" value="false" id="massageNo"
