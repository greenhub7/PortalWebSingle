                <label class="form-check-label" for="faceUpNo">no</label>
            </div>
            <div class="form-check form-check-inline mb-0">
                <input class="form-check-input" type="radio" name="FaceUp" value="true" id="faceUpSi"
                       @(Model?.FaceUp == true ? "checked" : "") />
                <label class="form-check-label" for="faceUpSi">si</label>
            </div>
        </div>
        <div class="mb-1 d-flex align-items-center">
            <span style="min-width: 115px; display: inline-block;">BCG</span>
            <div class="form-check form-check-inline mb-0">
                <input class="form-check-input" type="radio" name="BCGVaccine" value="false" id="bcgNo"
                       @(Model?.BCGVaccine == false ? "checked" : "") />
                <label class="form-check-label" for="bcgNo">no</label>
            </div>
            <div class="form-check form-check-inline mb-0">
                <input class="form-check-input" type="radio" name="BCGVaccine" value="true" id="bcgSi"
                       @(Model?.BCGVaccine == true ? "checked" : "") />
                <label class="form-check-label" for="bcgSi">si</label>
            </div>
        </div>
        <div class="mb-1 d-flex align-items-center">
            <span style="min-width: 115px; display: inline-block;">INMUN. HEPATITIS B</span>
            <div class="form-check form-check-inline mb-0">
                <input class="form-check-input" type="radio" name="HepatitisB" value="false" id="hepBNo"
                       @(Model?.HepatitisB == false ? "checked" : "") />
                <label class="form-check-label" for="hepBNo">no</label>
            </div>
            <div class="form-check form-check-inline mb-0">
                <input class="form-check-input" type="radio" name="HepatitisB" value="true" id="hepBSi"
                       @(Model?.HepatitisB == true ? "checked" : "") />
                <label class="form-check-label" for="hepBSi">si</label>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <span style="min-width: 115px; display: inline-block;">Meconio 1<sup>er</sup> día</span>
            <div class="form-check form-check-inline mb-0">
                <input class="form-check-input" type="radio" name="MeconiumFirstDay" value="false" id="meconioNo"
                       @(Model?.MeconiumFirstDay == false ? "checked" : "") />
                <label class="form-check-label" for="meconioNo">no</label>
            </div>
            <div class="form-check form-check-inline mb-0">
                <input class="form-check-input" type="radio" name="MeconiumFirstDay" value="true" id="meconioSi"
                       @(Model?.MeconiumFirstDay == true ? "checked" : "") />
                <label class="form-check-label" for="meconioSi">si</label>
            </div>
        </div>
    </div>

    @* PESO AL EGRESO *@
    <div class="col-md-2">
        <div class="form-group">
            <label class="small font-weight-bold">PESO AL EGRESO</label>
            <div class="d-flex align-items-center">
                <input type="number" class="form-control form-control-sm" id="DischargeWeight" name="DischargeWeight"
                       style="width: 80px;" step="1" min="0"
                       value="@(Model?.DischargeWeight > 0 ? Model.DischargeWeight.ToString() : "")" />
                <span class="ml-1 small">g</span>
            </div>
        </div>
    </div>
</div>
