                                   @(Model?.NeonatalAttendantType == "auxil" ? "checked" : "") />
                            <label class="form-check-label" for="neoAuxil">auxil.</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="NeonatalAttendantType" value="estud" id="neoEstud"
