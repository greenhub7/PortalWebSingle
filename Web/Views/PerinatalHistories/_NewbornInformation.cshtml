                <input type="text" class="form-control form-control-sm" id="DiseaseCode5" name="DiseaseCode5"
                       placeholder="código" style="width: 55px; font-size: 9px;" value="@Model?.DiseaseCode5" />
                <input type="text" class="form-control form-control-sm" id="DiseaseCode6" name="DiseaseCode6"
                       placeholder="código" style="width: 55px; font-size: 9px;" value="@Model?.DiseaseCode6" />
