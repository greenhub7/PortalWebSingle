                            <label class="form-check-label" for="maskNo">no</label>
                        </div>
                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="ResuscitationMaskStatus" value="true" id="maskSi"
                                   @(Model?.ResuscitationMask == true ? "checked" : "") />
                            <label class="form-check-label" for="maskSi">si</label>
