@* SolMed Ultimate - Standardized Floating Action Buttons *@
@{
    var returnUrl = ViewBag.ReturnUrl as string ?? null;
    var formId = ViewBag.FormId as string ?? null;
    
    var buttonAttributes = new Dictionary<string, object>
    {
        { "type", "submit" },
        { "id", "btnSave" },
        { "class", "medical-floating-btn" }
    };
    
    if (!string.IsNullOrEmpty(formId))
    {
        buttonAttributes.Add("form", formId);
    }
}

<div class="medical-floating-actions">
    <button @Html.Raw(string.Join(" ", buttonAttributes.Select(kvp => $"{kvp.Key}=\"{kvp.Value}\"")))>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
            <polyline points="17,21 17,13 7,13 7,21"/>
            <polyline points="7,3 7,8 15,8"/>
        </svg>
        <span>Guardar</span>
    </button>
    
    <a href="@(returnUrl ?? "javascript:history.back();")" class="medical-floating-btn medical-floating-btn-secondary" id="btnCancel">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="m15 18-6-6 6-6"/>
        </svg>
        <span>Cancelar</span>
    </a>
</div>
