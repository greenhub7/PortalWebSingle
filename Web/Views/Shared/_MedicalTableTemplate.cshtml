@* SolMed Ultimate - Medical Table Template *@
@* Use this template for all table views across the application *@

<div class="medical-table-wrapper">
    <!-- Table Header with Actions -->
    <div class="medical-table-header">
        <h3 class="medical-table-title">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 6h18"/>
                <path d="M3 12h18"/>
                <path d="M3 18h18"/>
            </svg>
            Medical Records
        </h3>
        
        <div class="medical-table-actions">
            <!-- Search -->
            <div class="medical-table-search">
                <svg class="medical-table-search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"/>
                    <path d="m21 21-4.35-4.35"/>
                </svg>
                <input type="text" placeholder="Search records..." />
            </div>
            
            <!-- Filter -->
            <div class="medical-table-filter" data-column="3">
                <button class="medical-table-filter-btn">
                    <span>All Status</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m6 9 6 6 6-6"/>
                    </svg>
                </button>
                <div class="medical-table-filter-dropdown">
                    <div class="medical-table-filter-option" data-value="all">All Status</div>
                    <div class="medical-table-filter-option" data-value="active">Active</div>
                    <div class="medical-table-filter-option" data-value="pending">Pending</div>
                    <div class="medical-table-filter-option" data-value="completed">Completed</div>
                </div>
            </div>
            
            <!-- Add New Button -->
            <a href="#" class="medical-btn medical-btn-primary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14"/>
                    <path d="M12 5v14"/>
                </svg>
                Add New
            </a>
        </div>
    </div>
    
    <!-- Table Container -->
    <div class="medical-table-container">
        <table class="medical-table">
            <thead>
                <tr>
                    <th class="sortable">
                        Patient Name
                    </th>
                    <th class="sortable">
                        Date of Birth
                    </th>
                    <th class="sortable cell-date">
                        Last Visit
                    </th>
                    <th class="sortable cell-center">
                        Status
                    </th>
                    <th class="cell-center">
                        Priority
                    </th>
                    <th class="cell-actions">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="row-critical">
                    <td>
                        <div style="display: flex; align-items: center; gap: var(--space-md);">
                            <div style="width: 32px; height: 32px; background: linear-gradient(135deg, var(--medical-primary), var(--medical-secondary)); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; font-size: var(--font-size-sm);">
                                JD
                            </div>
                            <div>
                                <div style="font-weight: var(--font-weight-medium); color: var(--text-primary);">John Doe</div>
                                <div style="font-size: var(--font-size-xs); color: var(--text-muted);">ID: MED-001</div>
                            </div>
                        </div>
                    </td>
                    <td class="cell-date">March 15, 1985</td>
                    <td class="cell-date">December 5, 2024</td>
                    <td class="cell-center">
                        <span class="medical-status-badge critical">Critical</span>
                    </td>
                    <td class="cell-center">
                        <span class="medical-status-badge urgent">High</span>
                    </td>
                    <td class="cell-actions">
                        <a href="#" class="medical-table-action-btn view" title="View Details">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                <circle cx="12" cy="12" r="3"/>
                            </svg>
                        </a>
                        <a href="#" class="medical-table-action-btn edit" title="Edit">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                <path d="m18.5 2.5 3 3L12 15l-4 1 1-4z"/>
                            </svg>
                        </a>
                        <a href="#" class="medical-table-action-btn delete" title="Delete">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 6h18"/>
                                <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
                                <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                            </svg>
                        </a>
                    </td>
                </tr>
                <tr class="row-urgent">
                    <td>
                        <div style="display: flex; align-items: center; gap: var(--space-md);">
                            <div style="width: 32px; height: 32px; background: linear-gradient(135deg, var(--medical-primary), var(--medical-secondary)); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; font-size: var(--font-size-sm);">
                                JS
                            </div>
                            <div>
                                <div style="font-weight: var(--font-weight-medium); color: var(--text-primary);">Jane Smith</div>
                                <div style="font-size: var(--font-size-xs); color: var(--text-muted);">ID: MED-002</div>
                            </div>
                        </div>
                    </td>
                    <td class="cell-date">July 22, 1990</td>
                    <td class="cell-date">December 4, 2024</td>
                    <td class="cell-center">
                        <span class="medical-status-badge urgent">Urgent</span>
                    </td>
                    <td class="cell-center">
                        <span class="medical-status-badge pending">Medium</span>
                    </td>
                    <td class="cell-actions">
                        <a href="#" class="medical-table-action-btn view" title="View Details">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                <circle cx="12" cy="12" r="3"/>
                            </svg>
                        </a>
                        <a href="#" class="medical-table-action-btn edit" title="Edit">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                <path d="m18.5 2.5 3 3L12 15l-4 1 1-4z"/>
                            </svg>
                        </a>
                        <a href="#" class="medical-table-action-btn delete" title="Delete">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 6h18"/>
                                <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
                                <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                            </svg>
                        </a>
                    </td>
                </tr>
                <tr class="row-stable">
                    <td>
                        <div style="display: flex; align-items: center; gap: var(--space-md);">
                            <div style="width: 32px; height: 32px; background: linear-gradient(135deg, var(--medical-primary), var(--medical-secondary)); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; font-size: var(--font-size-sm);">
                                MJ
                            </div>
                            <div>
                                <div style="font-weight: var(--font-weight-medium); color: var(--text-primary);">Michael Johnson</div>
                                <div style="font-size: var(--font-size-xs); color: var(--text-muted);">ID: MED-003</div>
                            </div>
                        </div>
                    </td>
                    <td class="cell-date">January 10, 1978</td>
                    <td class="cell-date">December 1, 2024</td>
                    <td class="cell-center">
                        <span class="medical-status-badge stable">Stable</span>
                    </td>
                    <td class="cell-center">
                        <span class="medical-status-badge stable">Low</span>
                    </td>
                    <td class="cell-actions">
                        <a href="#" class="medical-table-action-btn view" title="View Details">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                <circle cx="12" cy="12" r="3"/>
                            </svg>
                        </a>
                        <a href="#" class="medical-table-action-btn edit" title="Edit">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                <path d="m18.5 2.5 3 3L12 15l-4 1 1-4z"/>
                            </svg>
                        </a>
                        <a href="#" class="medical-table-action-btn delete" title="Delete">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 6h18"/>
                                <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
                                <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                            </svg>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <!-- Table Footer with Pagination -->
    <div class="medical-table-footer">
        <div class="medical-table-info">
            Showing 3 of 3 entries
        </div>
        
        <div class="medical-table-pagination">
            <button class="medical-pagination-btn disabled">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="m15 18-6-6 6-6"/>
                </svg>
            </button>
            <button class="medical-pagination-btn active">1</button>
            <button class="medical-pagination-btn">2</button>
            <button class="medical-pagination-btn">3</button>
            <button class="medical-pagination-btn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="m9 18 6-6-6-6"/>
                </svg>
            </button>
            
            <select class="medical-pagination-select">
                <option value="10">10 per page</option>
                <option value="25">25 per page</option>
                <option value="50">50 per page</option>
                <option value="100">100 per page</option>
            </select>
        </div>
    </div>
</div>